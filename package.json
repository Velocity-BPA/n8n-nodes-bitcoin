{
  "name": "n8n-nodes-bitcoin",
  "version": "1.0.1",
  "description": "A comprehensive n8n community node for Bitcoin blockchain providing address, transaction, block, mempool, and fee operations with trigger support for blockchain events.",
  "license": "BUSL-1.1",
  "author": {
    "name": "Velocity BPA",
    "email": "licensing@velobpa.com",
    "url": "https://velobpa.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Velocity-BPA/n8n-nodes-bitcoin.git"
  },
  "homepage": "https://github.com/Velocity-BPA/n8n-nodes-bitcoin",
  "keywords": [
    "n8n",
    "n8n-community-node-package",
    "bitcoin",
    "btc",
    "blockchain",
    "cryptocurrency",
    "mempool",
    "utxo",
    "transaction",
    "automation"
  ],
  "engines": {
    "node": ">=18.10",
    "pnpm": ">=9.1"
  },
  "packageManager": "pnpm@9.1.4",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "build": "tsc && gulp build:icons",
    "dev": "tsc --watch",
    "format": "prettier nodes credentials --write",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "prepublishOnly": "pnpm build"
  },
  "files": [
    "dist"
  ],
  "n8n": {
    "n8nNodesApiVersion": 1,
    "credentials": [
      "dist/credentials/BitcoinApi.credentials.js"
    ],
    "nodes": [
      "dist/nodes/Bitcoin/Bitcoin.node.js",
      "dist/nodes/Bitcoin/BitcoinTrigger.node.js"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-n8n-nodes-base": "^1.16.1",
    "gulp": "^4.0.2",
    "jest": "^29.7.0",
    "n8n-workflow": "^1.30.0",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "axios": "^1.6.8"
  },
  "peerDependencies": {
    "n8n-workflow": "^1.30.0"
  }
}
